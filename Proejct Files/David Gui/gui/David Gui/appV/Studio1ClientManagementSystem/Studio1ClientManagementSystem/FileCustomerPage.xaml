<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             x:Class="Studio1ClientManagementSystem.CustomerPage"
             BackgroundColor="#CCE5FF">
    <Grid VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">

        <!-- Define the two column widths for the grid. -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Define the row height for the grid. -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Add a frame for displaying customer data. -->
        <Frame Grid.Column="1"
               BackgroundColor="#F5F5F5"
               WidthRequest="1000"
               BorderColor="Transparent"
               HeightRequest="600"
               VerticalOptions="Center"
               HasShadow="False"
               CornerRadius="20"
               HorizontalOptions="Center">

            <!-- Add a grid inside the frame. -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Frame>

        <!-- Add a frame for displaying navigation buttons. -->
        <Frame 
           BackgroundColor="#564787"
            WidthRequest="70"
            TranslationX="60"
           Padding="3" 
           CornerRadius="37"
            Margin="10,100,-30,100">
            <Grid>

                <!-- Define the row heights for the grid inside the frame. -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="60" Grid.Row="1"/>
                    <RowDefinition Height="60" Grid.Row="2"/>
                    <RowDefinition Height="60" Grid.Row="3"/>
                    <RowDefinition Height="60" Grid.Row="4"/>
                    <RowDefinition Height="60" Grid.Row="5"/>
                    <RowDefinition Height="60" Grid.Row="6"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <!-- Add image buttons for navigation. -->
                <ImageButton Grid.Row="1" Source="home.png" Clicked="HomeImageButtonClick"  BackgroundColor="Transparent" Margin="12"/>
                <ImageButton Grid.Row="2" Source="file.png" Clicked="CustomerImageButtonClick" BackgroundColor="Transparent" Margin="12"/>
                <ImageButton Grid.Row="3" Source="notes.png" Clicked="NoteImageButtonClick" BackgroundColor="Transparent" Margin="12"/>
                <ImageButton Grid.Row="4" Source="share.png" Clicked="PeopleImageButtonClick" BackgroundColor="Transparent" Margin="12"/>
                <ImageButton Grid.Row="5" Source="timer.png" Clicked="TimerImageButtonClick" BackgroundColor="Transparent" Margin="12"/>
                <ImageButton Grid.Row="6" Source="folderlock.png" Clicked="FolderLockImageButtonClick" BackgroundColor="Transparent" Margin="12"/>
            </Grid>
        </Frame>

        <!-- Add a frame for displaying customer data. -->
        <Frame Grid.Column="1"
       BackgroundColor="#F5F5F5"
       WidthRequest="900"
       HeightRequest="500"
       TranslationX="0"
       TranslationY="-20"
       HasShadow="False"
       CornerRadius="20"
       HorizontalOptions="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                

                <StackLayout Grid.Row="0" Orientation="Horizontal">
                    <StackLayout >
                        <!-- Button to delete a user -->
                        <Button Text="Delete User" TextColor="White" BackgroundColor="#FFA400" WidthRequest="150" HeightRequest="50" TranslationX="05" TranslationY="420" CornerRadius="15" Command="{Binding DeleteCustomerCommand}"/>
                        <!-- Button to add a user -->
                        <Button Text="Add User" TextColor="White" BackgroundColor="#297373" WidthRequest="150" HeightRequest="50" TranslationX="315" TranslationY="370" CornerRadius="15"  Clicked="ButtonAddUserCliked" Command="{Binding AddCustomerCommand}"/>
                        <!-- Button to import file -->
                        <Button Text="ImportFile" TextColor="White" BackgroundColor="#EF798A" WidthRequest="150" HeightRequest="50" TranslationX="660" TranslationY="320" CornerRadius="15" Clicked="ButtonImportFileCliked"/>
                        <!-- Button to search -->
                        <Button Text="Search" TextColor="White" BackgroundColor="#B9B9B9" WidthRequest="200" HeightRequest="50" TranslationX="0" TranslationY="-150" CornerRadius="15"/>
                    </StackLayout>
                </StackLayout>

                <Grid Grid.Row="2" BindableLayout.ItemsSource="{Binding People}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid x:Name="headerGrid" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" TranslationY="-140">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Text="Id" TextColor="Black" FontSize="19" Padding="10" HorizontalOptions="Center" VerticalOptions="Center"/>
                        <Label Grid.Column="1" Text="First Name" TextColor="Black" FontSize="19" Padding="10" HorizontalOptions="Center" VerticalOptions="Center"/>
                        <Label Grid.Column="2" Text="Last Name" TextColor="Black" FontSize="19" Padding="10" HorizontalOptions="Center" VerticalOptions="Center"/>
                        <Label Grid.Column="3" Text="Age" TextColor="Black" FontSize="19" Padding="10" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Grid>

                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <BoxView Grid.Column="0" BackgroundColor="Black" WidthRequest="1" HorizontalOptions="End" VerticalOptions="FillAndExpand"/>
                                <BoxView Grid.Column="1" BackgroundColor="Black" WidthRequest="1" HorizontalOptions="End" VerticalOptions="FillAndExpand"/>
                                    
                                
                                <Label Grid.Column="0" Text="{Binding Id}" Padding="10" HorizontalOptions="Center" VerticalOptions="Center"/>
                                <Label Grid.Column="1" Text="{Binding FirstName}" Padding="10" HorizontalOptions="Center" VerticalOptions="Center"/>
                                <Label Grid.Column="2" Text="{Binding LastName}" Padding="10" HorizontalOptions="Center" VerticalOptions="Center"/>
                            </Grid>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </Grid>
            </Grid>
        </Frame>



        <Frame BackgroundColor="Transparent"  TranslationX="1048" TranslationY="-270" MaximumHeightRequest="42" MaximumWidthRequest="42" CornerRadius="10" BorderColor="Black" />
        <ImageButton Source="logout.png"  Clicked="LogOutImageButtonClick"  BackgroundColor="Transparent" TranslationX="1046" TranslationY="-267" HeightRequest="29" WidthRequest="30" CornerRadius="10" BorderColor="Black"/>

        <Button Text="Save" TextColor="White" BackgroundColor="#101935" WidthRequest="150" HeightRequest="50" TranslationX="565" TranslationY="265" CornerRadius="15"/>
    
    </Grid>
    
</ContentPage>